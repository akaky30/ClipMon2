<!-- app/src/main/AndroidManifest.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- UDP/网络套接字需要（若不需要可去掉） -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- 前台服务与类型 -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission
        android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC"
        tools:targetApi="u" />

    <!-- Android 13+ 通知权限 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- 使用情况访问（需用户在设置中手动授权） -->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <!-- 可选：请求忽略电池优化（便于引导用户把应用加入白名单，提升存活率） -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <application
        android:allowBackup="true"
        android:label="ClipMon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ClipMon2">

        <!-- 剪贴板监控前台服务 -->
        <service
            android:name=".ClipboardMonitorService"
            android:exported="false"
            android:foregroundServiceType="dataSync"
            android:stopWithTask="false" />

        <!-- 无障碍服务（输入时提醒） -->
        <service
            android:name=".ClipMonAccessibilityService"
            android:exported="false"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/clipmon_accessibility_service" />
        </service>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 敏感复制弹窗页（如需在前台显示专门页面） -->
        <activity
            android:name=".SensitivePromptActivity"
            android:exported="false"
            android:taskAffinity=""
            android:excludeFromRecents="true"
            android:theme="@style/Theme.ClipMon2" />

        <!-- 通知 Action 接收器（后台点通知按钮回传决策） -->
        <receiver
            android:name=".ActionReceiver"
            android:exported="false" />
    </application>
</manifest>
